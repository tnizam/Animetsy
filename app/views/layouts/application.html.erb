<!DOCTYPE html>
<html>
  <head>
    <title>Animetsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script>
      window.logourl = "<%= image_url("logo.png") %>"
      window.bannerurl = "<%= image_url("banner.png") %>"
      window.aniurl = "<%= image_url("haikyu1.jpg") %>"
      window.aniurl2 = "<%= image_url("hh.jpg") %>"
      window.aniurl3 = "<%= image_url("mha.jpg") %>"
      window.aniurl4 = "<%= image_url("naruto-ipod.jpg") %>"
      window.aniurl5 = "<%= image_url("tg.jpg") %>"
      window.aniurl6 = "<%= image_url("op.jpg") %>"
      window.searchbg = "<%= image_url("ani-bkg.jpg") %>"
    </script>
    <link rel="icon" href="<%= image_url("hina.png") %>" type="image/png">

    <meta name="description" content="Animetsy App" />
    <meta name="title" property="og:title" content="Animetsy" />
    <meta property="og:type" content="_" />
    <meta name="image" property="og:image" content="https://media.giphy.com/media/dg7hSvRjwARDas6Ivo/giphy.gif" />
    <meta name="description" property="og:description" content="Animetsy is a Full Stack clone of Etsy, where users can browse 
          products, leave reviews, and add their desired products to their cart." />
    <meta name="author" content="Tahmina Nizam" />
  </head>

  <body>
    <%= yield %>
  </body>
</html>
